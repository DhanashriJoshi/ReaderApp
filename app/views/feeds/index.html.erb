<div class="page-header">
  <%= link_to new_feed_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Feed
  <% end %>
  <h1>Listing Feeds</h1>
</div>

<% if @feeds.present? %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Description</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @feeds.each do |feed| %>
        <tr>
          <td><%= feed.title %></td>
          <td><%= feed.url %></td>
          <td><%= feed.description %></td>
          <td><%= link_to 'Show', feed %></td>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<% else %>
  <h4>Oops! Enter New Feed for the articles.</h4>
<% end %>

<br>
