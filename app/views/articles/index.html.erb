<div class="page-header">
  <h1> Listing Articles <%= (@feed.present? ? ": #{@feed.title}" : '') %></h1>
</div>
<% if @articles.present? %>
  <% @articles.each do |article| %>
    <div class = "well well-sm">
      <%= link_to article.title, article.url, target: '_blank' %>
      <h6><%= article.published_at.strftime '%Y-%m-%d %H:%M:%S' %></h6>
    </div>
  <% end %>
<% else %>
  <div class = "well well-sm">
    <h4>Hurrah! You have no articles unread.</h4>
  </div>
<% end %>
